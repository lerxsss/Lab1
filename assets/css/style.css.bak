/* =========================================================
   0) Reset + box-sizing
========================================================= */
*, *::before, *::after { box-sizing: border-box; }

html { font-size: 16px; }
body{
  margin: 0;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  line-height: 1.6;
  color: var(--fg);
  background: var(--bg);
  font-size: var(--fs-body);                 /* fluid текст */
}

img { max-width: 100%; height: auto; display: block; }

a { color: var(--brand); text-decoration: none; }
a:hover, a:focus-visible { text-decoration: underline; outline: none; }

ul[class], ol[class] { list-style: none; margin: 0; padding: 0; }

/* =========================================================
   1) Дизайн-токени (CSS variables)
========================================================= */
:root{
  /* Бренд */
  --brand: #002b5c;
  --brand-600: #01356f;
  --brand-100: #e6eef6;

  /* Текст/поверхні/межі */
  --fg: #1f2937;
  --fg-muted: #6b7280;
  --bg: #f5f7fb;
  --surface: #ffffff;
  --border: #e5e7eb;

  /* Простір, радіуси, тіні */
  --space-1: .25rem;    /* 4px  */
  --space-2: .5rem;     /* 8px  */
  --space-3: .75rem;    /* 12px */
  --space-4: 1rem;      /* 16px */
  --space-6: 1.5rem;    /* 24px */
  --space-8: 2rem;      /* 32px */

  --radius-1: 6px;
  --radius-2: 12px;

  --shadow-1: 0 6px 16px rgba(0,0,0,.06);

  --container: 1200px;

  /* Fluid typography */
  --fs-body: clamp(1rem, 0.94rem + 0.5vw, 1.125rem);
  --fs-h2:   clamp(1.25rem, 1.05rem + 1.2vw, 1.6rem);
  --fs-h1:   clamp(1.6rem,  1.2rem  + 2.2vw, 2.2rem);

  /* Сумісність зі старим неймінгом */
  --c-primary: var(--brand);
  --c-primary-600: var(--brand-600);
  --c-surface: var(--surface);
  --c-border: var(--border);
  --c-text: var(--fg);
  --c-muted: var(--fg-muted);
  --c-bg: var(--bg);
}

/* =========================================================
   2) Базовий layout (mobile-first, grid)
   header
   sidenav
   main
   footer
========================================================= */
.layout{
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: auto auto 1fr auto;    /* header, sidenav, main, footer */
  grid-template-areas:
    "header"
    "sidenav"
    "main"
    "footer";
  min-height: 100dvh;                        /* коректно для моб. браузерів */
}

/* Прив'язуємо області */
.header  { grid-area: header; }
.sidenav { grid-area: sidenav; }
.main    { grid-area: main; }
.footer  { grid-area: footer; }

/* >=640px — двоколонковий вигляд, вузький sidenav */
@media (min-width: 640px){
  .layout{
    grid-template-columns: 220px 1fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "header header"
      "sidenav main"
      "footer footer";
  }
}

/* >=1024px — ширший sidenav */
@media (min-width: 1024px){
  .layout{ grid-template-columns: 280px 1fr; }
}

/* =========================================================
   3) HEADER + NAV
========================================================= */
.header{
  background: var(--surface);
  border-bottom: 1px solid var(--border);
}

.header__title{
  margin: 0;
  padding: var(--space-4) var(--space-6);
  color: var(--brand);
  font-size: var(--fs-h1);                   /* fluid заголовок */
}

.nav{
  display: flex;
  gap: var(--space-3);
  padding: var(--space-3) var(--space-6);
  border-top: 1px solid var(--border);
}

.nav__link{
  color: var(--fg);
  font-weight: 600;
  padding: .375rem .75rem;
  border-radius: var(--radius-1);
}
.nav__link:hover,
.nav__link:focus-visible{ background: var(--brand-100); }

.nav__link--cta{
  margin-left: auto;
  color: #fff;
  background: var(--brand);
}
.nav__link--cta:hover,
.nav__link--cta:focus-visible{ background: var(--brand-600); }

/* =========================================================
   4) SIDENAV (уніфікований aside із «картками»)
========================================================= */
.sidenav{
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  padding: var(--space-6);
  background: var(--surface);
  border-right: 1px solid var(--border);
}

.sidebar{
  background: var(--surface);                /* не фіксуємо #fff — для теми */
  border: 1px solid var(--border);
  border-radius: var(--radius-2);
  padding: var(--space-4);
  box-shadow: var(--shadow-1);
}

.sidebar__title{
  margin: 0 0 var(--space-3);
  color: var(--brand);
  font-size: 1.1rem;
}

.sidebar__list{ display: grid; gap: var(--space-2); }
.sidebar__item{ color: var(--fg); }
.sidebar__link{ color: var(--brand); }
.sidebar__link:hover, .sidebar__link:focus-visible{ text-decoration: underline; }

/* Декоративні модифікатори (легкі відтінки) */
.sidebar--links  { background: color-mix(in srgb, var(--surface) 92%, #c2f0d0 8%); }
.sidebar--values { background: color-mix(in srgb, var(--surface) 92%, #cfe9ff 8%); }
.sidebar--social { background: color-mix(in srgb, var(--surface) 92%, #dfeaff 8%); }

/* =========================================================
   5) MAIN + секція «Новини»
========================================================= */
.main{
  padding: var(--space-6);
  max-width: var(--container);
  width: 100%;
  margin-inline: auto;
}

.main__title{
  margin: 0 0 var(--space-6);
  font-size: var(--fs-h2);                   /* fluid підзаголовок */
}

.news__title{ margin: 0 0 var(--space-4); font-size: var(--fs-h2); }

.news__list{
  display: grid;
  gap: var(--space-6);
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* --- Картка новини --- */
.news-card{
  display: flex;
  flex-direction: column;
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-2);
  overflow: hidden;
  box-shadow: var(--shadow-1);
}

/* картинка з фіксованою пропорцією 16:9 */
.news-card__picture{
  display: block;
  aspect-ratio: 16 / 9;
  overflow: clip;
  background: var(--surface);
}
.news-card__img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}

.news-card__title{
  margin: var(--space-4) var(--space-4) 0;
  font-size: 1rem;
  line-height: 1.3;
}
.news-card__excerpt{
  margin: var(--space-2) var(--space-4) 0;
  color: var(--fg-muted);
}

/* нижній бар: дата зліва, кнопка справа — прилипає до низу */
.news-card__bar{
  margin-top: auto;                          /* вниз картки */
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-3);
  padding: var(--space-3) var(--space-4);
  border-top: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface) 94%, #000 6%);
}
.news-card__date{
  color: var(--fg-muted);
  font-size: .875rem;
  line-height: 1;
}

/* компактна кнопка у барі */
.news-card__btn{
  display: inline-flex;
  align-items: center;
  gap: .4rem;
  padding: .4rem .9rem;
  border: 0;
  border-radius: var(--radius-1);
  color: #fff;
  background: var(--brand);
  font-weight: 600;
  font-size: .875rem;
  cursor: pointer;
}
.news-card__btn:hover,
.news-card__btn:focus-visible{ background: var(--brand-600); }

/* =========================================================
   6) Глобальний блок MEDIA (може використовуватись на інших сторінках)
========================================================= */
.media{ margin: var(--space-6) 0; }
.media--framed{
  background: #fafafa;
  border: 1px solid var(--border);
  border-radius: var(--radius-2);
  padding: var(--space-3);
}
.media__img{
  display: block;
  width: 100%;
  height: auto;
  border-radius: var(--radius-1);
}
.media__caption{
  margin-top: var(--space-2);
  color: var(--fg-muted);
  font-size: .875rem;
  text-align: center;
}

/* =========================================================
   7) Таблиця послуг
========================================================= */
.services__title { margin: 0 0 var(--space-3); font-size: 1.25rem; }

.services__table{
  width: 100%;
  border-collapse: collapse;
  border: 1px solid var(--border);
  border-radius: var(--radius-1);
  overflow: hidden;
}
.services__header,
.services__cell{
  padding: var(--space-3) var(--space-4);
  border-bottom: 1px solid var(--border);
  text-align: left;
}
.services__header{ background: #f7f7f9; font-weight: 600; }
.services__row:nth-child(even) .services__cell{ background: #fcfcfd; }

/* =========================================================
   8) FOOTER з блоком «Наші контакти»
========================================================= */
.footer{
  background: var(--surface);
  border-top: 1px solid var(--border);
  padding: var(--space-6) var(--space-4);
}

.footer__text{ margin: 0; font-size: .95rem; order: 2; }  /* на моб. під контактами */
@media (min-width: 640px){
  .footer__text{ order: initial; }
}

.footer__group-name{ color: var(--brand); font-weight: 700; }

.footer__inner{
  display: grid;
  gap: var(--space-4);
  grid-template-columns: 1fr;                /* 1 колонка за замовчуванням */
  align-items: start;
  max-width: var(--container);
  margin: 0 auto;
}

/* Контакти без фіксованого фону — тема перемикає кольори сама */
.footer__contacts{
  font-style: normal;
  border: 1px solid var(--border);
  border-radius: var(--radius-2);
  padding: var(--space-4);
}

.footer__contacts-title{
  margin: 0 0 var(--space-3);
  color: var(--brand);
  font-size: 1.1rem;
}

.footer__contacts-list{
  display: grid;
  gap: .375rem;
  margin: 0; padding: 0; list-style: none;
}
.footer__contacts-item{ display: grid; grid-template-columns: max-content 1fr; gap: .5rem var(--space-2); }
.footer__label{ color: var(--fg-muted); white-space: nowrap; }
.footer__link{ color: var(--brand); text-decoration: none; }
.footer__link:hover, .footer__link:focus-visible{ text-decoration: underline; }

/* Розбиття футера на 2 колонки на ширших екранах */
@media (min-width: 640px){
  .footer__inner{ grid-template-columns: 1fr minmax(220px, 1fr); }
}
@media (min-width: 1024px){
  .footer__inner{ grid-template-columns: 1fr minmax(280px, 1fr); }
}

/* =========================================================
   9) Контактна форма
========================================================= */
.contact-form{
  width: 100%;
  max-width: 640px;
  margin: 0 auto var(--space-6);
  padding: var(--space-6);
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-2);
  box-shadow: var(--shadow-1);
}
.contact-form__item{ display: grid; gap: var(--space-2); margin-bottom: var(--space-4); }
.contact-form__label{ font-weight: 600; line-height: 1.3; }

.contact-form__input,
.contact-form__textarea{
  width: 100%;
  padding: var(--space-3) var(--space-4);
  font-size: 1rem;
  line-height: 1.4;
  color: var(--fg);
  background: #fff;
  border: 1px solid #dce3e1;
  border-radius: var(--radius-2);
  outline: none;
  transition: border-color .25s ease, box-shadow .25s ease;
}
/* Placeholder / hover / focus */
.contact-form__input::placeholder,
.contact-form__textarea::placeholder{ color: #94a3b8; }
.contact-form__input:hover,
.contact-form__textarea:hover{ border-color: #94a3b8; }
.contact-form__input:focus,
.contact-form__textarea:focus{
  border-color: var(--brand);
  box-shadow: 0 0 0 3px rgba(0,89,197,.15);
}
/* Висота textarea */
.contact-form__textarea{ min-height: 8rem; resize: vertical; }
/* HTML5-валідація */
.contact-form__input:required:user-invalid,
.contact-form__textarea:required:user-invalid{ border-color: #dc3545; }
.contact-form__input:required:valid,
.contact-form__textarea:required:valid{ border-color: #198754; }
/* Кнопка */
.contact-form__button{
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-6);
  border: none;
  border-radius: var(--radius-2);
  background: var(--brand);
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  box-shadow: var(--shadow-1);
  transition: background .25s ease, transform .05s ease;
}
.contact-form__button:hover,
.contact-form__button:focus-visible{ background: var(--brand-600); }
.contact-form__button:active{ transform: translateY(1px); }
.contact-form__button:disabled{ opacity:.6; cursor:not-allowed; }

/* =========================================================
   10) System Dark Theme (prefers-color-scheme: dark)
========================================================= */
@media (prefers-color-scheme: dark){
  :root{
    --bg:       #0b1020;
    --surface:  #101528;
    --fg:       #e7eaf3;
    --fg-muted: #b7bfd3;
    --border:   #232a3b;

    --brand:     #77b3ff;
    --brand-600: #6aa2f0;
    --brand-100: #17233b;
  }

  /* нижній бар у картці — ледве відтінений від surface */
  .news-card__bar{
    background: color-mix(in srgb, var(--surface) 92%, #fff 8%);
  }
}
